<%= simple_form_for(@flat) do |f| %>
  <div class="form-group">
    <%= f.input :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :address, class: 'form-control' %>
  </div>
    <div class="form-group">
                <%# <%= f.label :picture_url %>
                <%# <%= f.input :picture_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :description, as: :text, class: 'form-control' %>
      <%= f.input :price_per_night, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :number_of_guests, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-danger ml-2' %>
  </div>
<% end %>
